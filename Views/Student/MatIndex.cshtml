@model IEnumerable<ELearn.Models.Material>

@{
    ViewData["Title"] = "Study Material";
}

<h1>Study Material</h1>

<form asp-action="MatIndex" method="get">
    <div class="form-actions no-color">
        <p>
            Find by Module Code: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Module", "MatIndex", new { sortOrder = ViewBag.SortMod })
            </th>
            <th>
                @Html.ActionLink("Week", "MatIndex", new { sortOrder = ViewBag.SortWeek })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        if (item.Active == true)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Week)
            </td>
            <td>
               @Html.DisplayFor(modelItem => item.FileLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
        }
}           
    </tbody>
</table>

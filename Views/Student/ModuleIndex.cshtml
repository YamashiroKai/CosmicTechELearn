@model IEnumerable<ELearn.Models.Module_Course>

@{
    ViewData["Title"] = "Modules";
}

<form asp-action="ModuleRegister" method="get">
    <div class="form-actions no-color">
        <p>
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Dashboard", "Student")'">Back</button>
            Find by Course Code: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-secondary" />
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    if (item.Active == true)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModID)
            </td>
            <td>
                <a asp-action="ModuleView" asp-route-indexid="@item.ID" asp-route-modid="@item.ModID">View</a> |
            </td>
        </tr>
        }       
}
    </tbody>
</table>

<div>
    <a asp-action="RegistedModuleIndex">Back to My Modules</a>
</div>
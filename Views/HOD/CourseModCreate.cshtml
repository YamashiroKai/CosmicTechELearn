@model ELearn.Models.Module_Course

<h4>Add Module to Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourseModCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                <input asp-for="CourseID" class="form-control" value="@ViewBag.course_id" readonly/>
                <span asp-validation-for="CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
               Module
               <select asp-for="ModID" asp-items="@Model.Modules"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CourseIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

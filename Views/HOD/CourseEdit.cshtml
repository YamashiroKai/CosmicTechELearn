@model ELearn.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<h4>Edit Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CourseEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CourseID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreditRequired" class="control-label"></label>
                <input asp-for="CreditRequired" class="form-control" />
                <span asp-validation-for="CreditRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="SubjectCoID" class="control-label"></label>
               <select asp-for="SubjectCoID" asp-items="@Model.SubjectCoordinators"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CourseIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

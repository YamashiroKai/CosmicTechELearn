@model IEnumerable<ELearn.Models.Submission>

@{
    ViewData["Title"] = "Submission Slots";
}



<h1>Submission Slots</h1>


<form asp-action="SubIndex" method="get">
    <div class="form-actions no-color">
        <p>
            <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("Dashboard", "SubjectCoordinator")'">Back</button>
            Find by Module Code: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-secondary" />
        </p>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Module", "SubIndex", new { sortOrder = ViewBag.SortMod })
            </th>
            <th>
                @Html.ActionLink("Week", "SubIndex", new { sortOrder = ViewBag.SortWeek })
            </th>
            <th>
                @Html.ActionLink("Start Date", "SubIndex", new { sortOrder = ViewBag.SortStart})
            </th>
            <th>
                @Html.ActionLink("Due Date", "SubIndex", new { sortOrder = ViewBag.SortDue})
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ModID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Week)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active) 
            </td>
            <td>
                <a asp-action="SubEdit" asp-route-id="@item.SubID">Approve</a> |
                <a asp-action="SubDelete" asp-route-id="@item.SubID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
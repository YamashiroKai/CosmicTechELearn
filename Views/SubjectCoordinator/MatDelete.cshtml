@model ELearn.Models.Material

@{
    ViewData["Title"] = "Delete Material";
}

<h1>Delete Study Material</h1>


<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Week)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Week)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ModID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ModID)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FileLink)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FileLink)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
    </dl>
    
    <h4>Are you sure you want to delete this?</h4>

    <form asp-action="MatDelete">
        <input type="hidden" asp-for="MatID" />
        <input type="submit" value="Yes" class="btn btn-danger" /> |
        <button type="button" class="btn btn-secondary" onclick="location.href='@Url.Action("MatIndex", "SubjectCoordinator")'">No, return to Index</button>
    </form>
</div>
